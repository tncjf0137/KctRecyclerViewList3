<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    //리사이클러뷰 대량으로 만들 한줄을 만드는 부분
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:textColor="#FF1201"
            android:id="@+id/info_day"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:textColor="#FF1201"
            android:id="@+id/info_date1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:text="월"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/info_date2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:text="화"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/info_date3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:text="수"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/info_date4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:text="목"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/info_date5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:text="금"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/info_date6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:textColor="#0381FF"
            android:text="토"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:textColor="#0381FF"
            android:id="@+id/info_date7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>